.game-look {
    justify-content: space-between;
    padding: 10px;
    width: 100%;
    height: 100%;
}

.panel {
    width: 100%;
    height: auto;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
}

.top-panel__right {
    align-items: flex-end;
}

.game-info {
    flex-direction: row;
}

.indented {
    padding-left: 6px;
    padding-right: 0;
}

.resources {
    margin-top: 5px;
}

.plug {
    width: 310px;
}

.paused {
    border-color: rgba(255, 255, 255, 0.39);
    border-width: 5px;
    padding: 5px;
}

.time-speed-multiplied {
    background-color: rgba(255, 0, 0, 0.03);
}

}

.x3 .unity-toggle__checkmark {
    background-image: resource('UI/Sprites/Toggles/X3/Default');
}

.x3:hover .unity-toggle__checkmark {
    background-image: resource('UI/Sprites/Toggles/X3/Hovered');
}

.x3:checked .unity-toggle__checkmark {
    background-image: resource('UI/Sprites/Toggles/X3/Pressed');
}

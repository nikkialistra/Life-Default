.time-weather {
    width: 234px;
    height: 32px;
    background-image: resource('UI/Sprites/TimeToggling/TimeTogglingPanel');
    padding-left: 4px;
    padding-right: 4px;
    flex-direction: row;
}

.label {
    margin: 0;
    padding: 0;
    -unity-font: resource('Fonts/Exo 2/Exo2-Regular');
    -unity-font-definition: none;
    color: rgb(255, 255, 255);
}

.label-half {
    height: 16px;
    font-size: 11px;
    -unity-text-align: middle-center;
    width: 72px;
}

.date {
    width: 72px;
    height: 32px;
}

.date__year {
    font-size: 8px;
    padding-bottom: 4px;
}

.hour {
    width: 72px;
    font-size: 30px;
    -unity-text-align: middle-center;
    padding-bottom: 2px;
    margin-left: 5px;
    margin-right: 5px;
}

.right-aligned {
    -unity-text-align: middle-right;
}

.left-aligned {
    -unity-text-align: middle-left;
}

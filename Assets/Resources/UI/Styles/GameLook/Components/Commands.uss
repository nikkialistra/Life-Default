.commands {
    width: 260px;
    height: 42px;
}

.elements {
    width: 260px;
    height: 42px;
    flex-direction: row;
    justify-content: space-between;
}

.command {
    width: 48px;
    height: 42px;
    margin: 0;
    padding: 0;
    -unity-background-image-tint-color: rgb(255, 255, 255);
    border-width: 0;
    border-radius: 3px;
    background-color: rgba(0, 0, 0, 0);
    justify-content: center;
}

.command:hover {
    background-color: rgba(191, 194, 199, 0.02);
}

.command:active {
    background-color: rgba(191, 194, 199, 0.04);
}

.icon {
    width: 48px;
    height: 40px;
}

.move__icon {
    background-image: resource('UI/Sprites/ColonistInfo/Commands/CommandMove');
}

.stop__icon {
    background-image: resource('UI/Sprites/ColonistInfo/Commands/CommandStop');
}

.attack__icon {
    background-image: resource('UI/Sprites/ColonistInfo/Commands/CommandAttack');
}

.hold__icon {
    background-image: resource('UI/Sprites/ColonistInfo/Commands/CommandHold');
}

.patrol__icon {
    background-image: resource('UI/Sprites/ColonistInfo/Commands/CommandPatrol');
}
